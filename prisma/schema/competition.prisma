model Competition {
  id    Int       @id @default(autoincrement())
  name  String
  start DateTime?
  end   DateTime?

  admins User[]
  rounds Round[]
  logins Login[]
}

model Round {
  id          Int    @id @default(autoincrement())
  description String @default("")

  competition Competition @relation(fields: [competitionID], references: [id])

  competitionID Int
}

model Login {
  username       String @id @unique
  hashedPassword String
  salt           String

  competition Competition @relation(fields: [competitionID], references: [id])

  competitionID Int
}
