generator client {
    provider = "prisma-client-js"
    output   = "../node_modules/@prisma-app/main"
}

datasource db {
    provider = "sqlite"
    url      = "file:db/main.db"
}

model Election {
    id             Int       @id @default(autoincrement())
    name           String
    description    String    @default("")
    start          DateTime?
    end            DateTime?
    candidateStart DateTime?
    candidateEnd   DateTime?
    admins         User[]
}

model Competition {
    id     Int      @id @default(autoincrement())
    name   String
    start  DateTime
    end    DateTime
    admins User[]
}

model User {
    uniID        String        @id @unique
    elections    Election[]
    competitions Competition[]
}
